<!-- ==============================================
                    Card EVENEMENT
================================================-->
<section>
  <div class="container">
    {{#each posts}}
    <div class="card">
      <img class="card-img-top" src="{{image}}" alt="Image">
      <div class="card-body">
        <div class="content" id="dash" {{!--contenteditable="true"--}}>
          <a href="/articles/{{_id}}">
            <h2 class="card-title">{{title}}</h2>
          </a>
          {{!-- <a href="http://"><span>Clisson</span></a> --}}
          <p class="card-text">{{{content}}}</p>
          <div class="date">
            <p>Publi√© par {{auteur}}, le {{moment creatDate format="DD-MM-YY"}}</p>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>


<!--========================================== 
                  GALERIE PHOTO
 ===========================================-->
<div class="flex-container">
  <h1 class="h1photos">Galerie Photo</h1>
</div>
{{!-- <label class="file-label photo"><input class="file-input" type="file" name="image"><span class="file-cta"><span class="file-icon"><i class="fas fa-upload"></i></span><span class="file-label">Choisir son image</span></span></label> --}}
<div id="galerie">
  {{#each imgGal}}
  <img src="{{image}}" alt="ton image" style="cursor:pointer;"
    onclick="javascript:window.location.replace('/galerie-edit/{{_id}}')" />

  {{/each}}
  {{#if admin}}
  <div class="container photo-add">
    <form class="form-field add-photo" action="/galeries/post {{galerie.id}}" method="POST"
      enctype="multipart/form-data">
      <div class="file">
        <label class="btn-link">
          <i class="fas fa-cloud-upload-alt"></i><br> Choisir une image<input type="file" style="display: none"
            name="image" required>
        </label>
        <div class="field is-grouped">
          <div class="control">
            <button type="submit" class="button btn btn-dark">Envoyer</button>
          </div>
        </div>
      </div>
  </div>
  </form>
  {{/if}}
</div>

<!-- ==============================================
                    COMMENTAIRE
================================================-->

{{#if user}}
<section id="commentaire">
  <form class="form-field" action="/commentaires/post/{{commentaire.id}}" method="POST"  enctype="multipart/form-data"
    style="margin: 0 auto;">
    <div class="form-field evenement">
      <div class="control">
        <input class="input" type="hidden" name="commentaireId" value={{commentaire.id}}>
        <input class="input" type="hidden" name="deleteCommentaireId" value={{commentaire.id}}>
      </div>
    </div>
    <p class="lead font-weight-bold" style="text-align: center; padding-top: 1rem; color: white;" name="title">Si vous voulez me laisser un message</p>
    <div class="form-group" style="padding-top: 10px">
      <label for="textarea"></label>
      <textarea class="form-control" name="content"></textarea>
      <script>
        CKEDITOR.replace('content');
      </script>
    </div>
    <div class="form-group">
      <label class="label">{{auteur}}</label>
      <div class="control">
        <input class="form-control" type="text" name="auteur" placeholder="auteur">
      </div>
    </div>
    
    <a href="#commentaire"><button class="btn" type="submit">Envoyer</button></a>
    {{!-- <a href="/#test/{{_id}}"><button type="button" class="btn btn-dark"><i class="fas fa-trash-alt"></i></button></a> --}}
  </form>
  <br>

</section>
{{/if}}
<section class="commentaire" id="test">
  <h1 class="h1-commentaire">Liste des commentaires</h1>
  <div class="row bootstrap snippets" style="justify-content: center;">
    {{#each commentaire}}
    <div class="container test">
      <div class="col-md-6 col-md-offset-2 col-sm-12">
        <div class="comment-wrapper">
          <div class="panel panel-info">
            <div class="panel-body">
              <div class="clearfix" style="width: 35rem;">
                <hr>
                <ul class="media-list">
                  <li class="media" style="width: 35rem;">
                    <div class="media-body" style="text-align: center;">
                      <strong class="text-light bg-dark" style="display: flex; width: 12rem;">@{{auteur}}, le 
                        {{moment creatDate format="DD-MM-YY"}}</strong>

                      <p>{{{content}}}</p>
                    </div>
                    {{!-- <div><i class="fas fa-trash-alt"></i></div> --}}
                    {{#if ../admin}}
                    <div class="control" style="padding-top: 1rem;">
                      <a href="/#test/{{_id}}"><button type="button" class="btn btn-dark"><i class="fas fa-trash-alt"></i></button></a>
                    </div>
                    {{/if}}
                  </li>
              </div>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>

{{>footer}}