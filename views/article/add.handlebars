{{>navbar}}
<section class="section">
    <div class="container is-fullhd">
        <form class="form-field" action="/articles/post" method="POST" enctype="multipart/form-data">
            <div class="container add-article">
                <div class="form-field evenement">
                    <label class="label">Titre de l'évènement</label>                   
                    <div class="control">
                        <input class="input" type="text" name="title">
                    </div>
                </div>

                <div class="form-field evenement">
                    <label class="label">Ajouter du contenu</label>
                    <div class="control">
                        <textarea class="textarea" name="content"></textarea>
                        <script>
                            CKEDITOR.replace('content');
                        </script>
                    </div>
                </div>
                <div class="form-field evenement">
                    <label class="label">Auteur</label>
                    <div class="control">
                        <input class="input" type="text" name="auteur">
                    </div>
                </div>
                <div class="file">
                    <label class="file-label">
                        <input class="file-input" type="file" name="image">
                        <span class="file-cta">
                            <span class="file-icon">
                            </span><br><br>
                            <span class="file-label">
                                Choisir son image
                                <i class="fas fa-upload"></i>
                            </span>
                        </span>
                    </label>
                </div><br>

                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Enregistrer</button>
                    </div>
                    <div class="control">
                        <input type=button onclick=window.location.href='http://localhost:3050/'; value=Annuler />
                        {{!-- <button class="button is-text">Annuler</button> --}}
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

{{>footer}}
